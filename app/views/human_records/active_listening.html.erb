<%= simple_form_for @human_record,:url=>active_listening_human_record_path, :html => { :class => 'form-horizontal' } do |f| %>
	
	<%= render 'system_case' %>
	
	<%= render 'human_record_aggressions', f: f %>

	<%= f.fields_for :diagnosis do |builder| %>
		<%= render 'diagnoses', f: builder %>
	<%end%>

	

	
	<div class="form-actions">
    <%= f.button :submit, "Guardar", :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), human_records_path, :class => 'btn' %>
  </div>
<%end%>