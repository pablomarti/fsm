<%= simple_form_for @system_case, :url => demand_human_record_path(params[:id]), :html => { :class => 'form-horizontal' } do |f| %>

	<div class="page-header">
	  <h1><%=t '.title', :default => 'Asistencia legal' %></h1>
	</div>	

	<h3>Involucrados</h3>

	<%#= f.fields_for :human_records do |builder| %>
	  <%#= render :partial => 'system_cases/human_record', :locals => { f: builder, victim: false, remove_text: "Eliminar involucrado" } %>
	<%# end %>

  	<%#= link_to_add_fields "Agregar involucrado", f, :aggressors, "system_cases", { victim: false, remove_text: "Eliminar involucrado" } %>

	<%= f.fields_for :aggressors do |builder| %>
	  <%= render :partial => 'aggressor', :locals => { f: builder } %>
	<% end %>

  	<%= link_to_add_fields "Agregar involucrado", f, :aggressors %>

	<div class="form-actions">
		<%= f.button :submit, :class => 'btn-primary' %>
		<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	            system_cases_path, :class => 'btn' %>
	</div>
<% end %>