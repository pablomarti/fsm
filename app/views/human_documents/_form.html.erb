<%= simple_form_for @human_document, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :document_type_id %>
  <%= f.input :human_id %>
  <%= f.input :code %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                human_documents_path, :class => 'btn' %>
  </div>
<% end %>
