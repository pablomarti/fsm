<%- model_class = IncidentKind -%>
<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  <h1>Tipos de Incidentes</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @incident_kinds.each do |incident_kind| %>
      <tr>
        <td><%= link_to incident_kind.id, incident_kind_path(incident_kind) %></td>
        <td><%= incident_kind.name %></td>
        <td><%=l incident_kind.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_incident_kind_path(incident_kind), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      incident_kind_path(incident_kind),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_incident_kind_path,
            :class => 'btn btn-primary' %>
