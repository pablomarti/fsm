<%- model_class = SystemCase -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:city_id) %></th>
      <th><%= model_class.human_attribute_name(:zone_kind_id) %></th>
      <th><%= model_class.human_attribute_name(:aggression_date) %></th>
      <th><%= model_class.human_attribute_name(:recidivism) %></th>
      <th><%= model_class.human_attribute_name(:complaint) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @system_cases.each do |system_case| %>
      <tr>
        <td><%= link_to system_case.id, system_case_path(system_case) %></td>
        <td><%= system_case.city_id %></td>
        <td><%= system_case.zone_kind_id %></td>
        <td><%= system_case.aggression_date %></td>
        <td><%= system_case.recidivism %></td>
        <td><%= system_case.complaint %></td>
        <td><%=l system_case.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_system_case_path(system_case), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      system_case_path(system_case),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_system_case_path,
            :class => 'btn btn-primary' %>
