<!DOCTYPE html>
<html>
<head>
  <title>Fosalud</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%#= link_to "Fosalud", root_path, :class => "brand" %>
        <%= link_to image_tag("fosalud.png"), root_path, :class => "brand" , :id=>"root_link"%>
        <div class="nav-collapse" id="nav_colapse">
          <ul class="nav">
          	<%= render :partial => "menu" %>
            <div class="clear"></div>
          </ul>

          <ul class="nav pull-right">
            <% if user_signed_in? %>
              <li><%= link_to "Bienvenido, #{current_user.full_name}", edit_user_registration_path %></li>
              <li><%= link_to "Salir", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Acceder", new_user_session_path %></li>
            <% end %>
          </ul>
          <div class="clear"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="container" id="main_container">
  	<% flash.each do |name, msg| %>
  	  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
  	    <a class="close" data-dismiss="alert">Ã—</a>
  	    <%= msg %>
  	  </div>
	 <% end %>
	
    <div class="row">
      <div class="span9">
        <%= yield %>
      </div>

      <div class="span1"></div>

      <div class="span2">
        <% if user_signed_in? %>
          	<div class="row">
          	   <h3>Pendientes <%=@list.length || 0%></h3>
               <div>
                  <%= render :partial => "list_item", :collection => @list %>
               </div>
          	</div>    

            <div class="row">
              <hr />
            </div>

          	<div class="row">
          		<h3>Notificaciones</h3>
          	</div>
        <% end %>     
      </div>
    </div>
  </div>
  <div class="footer" id="footer">
    <hr class="simple_line">
    <span class="copyright">Fosalud - <%= Time.now.year%></span>
  </div>
</body>
</html>