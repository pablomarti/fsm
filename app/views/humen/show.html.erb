<%- model_class = Human -%>
<div class="page-header">
  <h1>Detalle</h1>
</div>

<h3>Detalles de registro</h3>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @human.name %></dd>
  <dt><strong>Apellido:</strong></dt>
  <dd><%= @human.last_name %></dd>
  <dt><strong>Nacimiento:</strong></dt>
  <dd><%= @human.birthdate %></dd>
  <dt><strong>Sexo:</strong></dt>
  <dd><%= @human.sex_name %></dd>
  <dt><strong>Total hijos:</strong></dt>
  <dd><%= @human.total_sons %></dd>
  <dt><strong>Total hijas:</strong></dt>
  <dd><%= @human.total_daughters %></dd>
  <dt><strong>Primer acceso:</strong></dt>
  <dd><%= @human.created_at %></dd>
</dl>

<h3>Casos relacionados</h3>

<dl class="dl-horizontal">
  <% @human.system_cases.each do |system_case| %>
    <dt><strong>Caso:</strong></dt>
    <dd><%= link_to "##{system_case.id} en #{system_case.created_at.strftime('%d/%m/%Y')}", system_case_path(system_case) %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              humen_path, :class => 'btn'  %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_human_path(@human), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              human_path(@human),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
