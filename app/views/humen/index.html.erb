<h1>Listing humen</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Last name</th>
    <th>Birthdate</th>
    <th>Sex</th>
    <th>Total sons</th>
    <th>Total daughters</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @humen.each do |human| %>
  <tr>
    <td><%= human.name %></td>
    <td><%= human.last_name %></td>
    <td><%= human.birthdate %></td>
    <td><%= human.sex %></td>
    <td><%= human.total_sons %></td>
    <td><%= human.total_daughters %></td>
    <td><%= link_to 'Show', human %></td>
    <td><%= link_to 'Edit', edit_human_path(human) %></td>
    <td><%= link_to 'Destroy', human, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

