<%- model_class = Human -%>
<div class="page-header">
  <h1>Registro</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Nacimiento</th>
      <th>Sexo</th>
      <th>Primer acceso</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @humen.each do |human| %>
      <tr>
        <td><%= human.id %></td>
        <td><%= human.name %></td>
        <td><%= human.last_name %></td>
        <td><%= human.birthdate %></td>
        <td><%= human.sex_name %></td>
        <td><%=l human.created_at %></td>
        <td>
          <%= link_to "Detalle",
                      human_path(human), :class => 'btn btn-mini' %>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_human_path(human), :class => 'btn btn-mini' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      human_path(human),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%#= link_to t('.new', :default => t("helpers.links.new")),
            new_human_path,
            :class => 'btn btn-primary' %>
